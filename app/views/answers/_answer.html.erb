<div class="col-xs-12">
  <div class="row">
    <div class="col-xs-11">
      <%= ans.body %>
    </div>

    <div class="col-xs-1">
      <% if can? :delete, ans %>
        <%= link_to answer_path(ans),
          method: :delete,
          data: { confirm: 'are you sure?' },
          class: "pull-right" do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      <% end %>
    </div>
  </div>
  <hr>
</div>
